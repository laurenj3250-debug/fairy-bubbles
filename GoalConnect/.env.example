# GoalConnect Environment Configuration for Railway
# Copy this file to `.env` for local development

# Database Connection
# Railway will automatically provide DATABASE_URL when you add PostgreSQL
# For local development, you can use a local PostgreSQL instance
DATABASE_URL="postgresql://user:password@localhost:5432/goalconnect"

# Session Secret (REQUIRED for authentication)
# Generate a secure random string with: openssl rand -base64 32
# Railway will let you set this in the dashboard
SESSION_SECRET="change-this-to-a-random-secret-string-in-production"

# Optional: Node Environment
NODE_ENV="development"

# Optional: Port (Railway sets this automatically)
PORT="5000"
